rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User tokens: Only the authenticated user can read/write their own token document.
    // Firebase Functions (server-side code) bypass these client-side rules when using Admin SDK.
    match /user_tokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny for any path not explicitly matched above.
    // This is a good security practice. If you have other collections that clients
    // need to access directly, define their rules specifically above this default block.
    // For this project, client interaction with Firestore is primarily for user-specific data
    // that should be protected, or data is accessed via Firebase Functions.
    match /{path=**}/documents/{document} { // Catch-all for any other document
      allow read, write: if false;
    }

    // If you have other collections, define their rules here, for example:
    // match /public_data/{docId} {
    //   allow read: if true; // Allow public read for a specific collection
    //   allow write: if false; // Disallow public write
    // }
  }
}
